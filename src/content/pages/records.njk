---
layout: layouts/base.njk
permalink: /records/
bodyClass: no-grid-page
pageStyles:
  - /assets/css/pages/records.css
---
{% set recordsConfig = siteConfig.pages.records %}

<h1 class="page-title">{{ recordsConfig.title }}</h1>
<p class="page-subtitle">{{ recordsConfig.subtitle }}</p>

<div class="clean-list">
    {% for post in collections.posts.slice(0, siteConfig.pagination.recordsPageSize) %}
    <a href="{{ post.url }}" class="clean-item">
        <span class="clean-item-title">{{ post.data.title }}</span>
        <span class="clean-item-index">#{{ loop.index }}</span>
    </a>
    {% endfor %}
</div>

<div class="action-button-container">
    <a href="{{ recordsConfig.archiveButtonUrl }}" class="action-button">
        {{ recordsConfig.archiveButtonText }} <i class="fa-solid fa-arrow-right"></i>
    </a>
</div>
