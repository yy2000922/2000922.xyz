    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{ title | formatTitle(siteConfig.meta.title) }}</title>
    <meta name="description" content="{{ description or siteConfig.meta.description }}">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Space+Grotesk:wght@300;400;600;700&family=Syncopate:wght@700&family=JetBrains+Mono:wght@400;500&display=block">
    <link rel="stylesheet" href="/assets/css/foundation.css?v=20260211-1">
    <link rel="stylesheet" href="/assets/css/layout.css?v=20260211-1">
    <link rel="stylesheet" href="/assets/css/components.css?v=20260211-1">
    <script>
        (function() {
            const savedTheme = localStorage.getItem('theme');
            if (savedTheme === 'light') {
                document.documentElement.setAttribute('data-theme', 'light');
            } else {
                document.documentElement.setAttribute('data-theme', 'dark');
            }
        })();
    </script>
    {% if pageStyles %}
        {% for href in pageStyles %}
            <link rel="stylesheet" href="{{ href }}" data-page-style>
        {% endfor %}
    {% endif %}
