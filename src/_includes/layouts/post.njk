---
layout: layouts/base.njk
---

<article class="post-container">
    <header class="post-header">
        <h1 class="post-title">{{ title }}</h1>
        <div class="post-meta">
            <time datetime="{{ date | htmlDateString }}">{{ date | readableDate }}</time>
            {% if tags %}
            <div class="post-tags">
                {% for tag in tags %}
                    {% if tag != "posts" %}
                        <span class="post-tag" style="color: {{ tag | stringToBorderColor }}; font-weight: 500;">#{{ tag }}</span>
                    {% endif %}
                {% endfor %}
            </div>
            {% endif %}
        </div>
    </header>

    <div class="post-content">
        {{ content | safe }}
    </div>
</article>
