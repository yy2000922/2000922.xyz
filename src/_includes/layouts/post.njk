---
layout: layouts/base.njk
bodyClass: no-grid-page post-page
pageStyles:
  - /assets/css/pages/post.css
---

<article class="post-container">
    <header class="post-header">
        <h1 class="post-title">{{ title }}</h1>
        <div class="post-meta">
            {% if category %}
            <a href="/categories/{{ category }}/" style="margin-right: 15px; color: var(--accent); text-decoration: none; font-weight: 500;">{{ category }}</a>
            {% endif %}
            <time datetime="{{ date | htmlDateString }}">{{ date | readableDate }}</time>
        </div>
    </header>

    <div class="post-content">
        {{ content | safe }}
    </div>

    <div class="post-actions" aria-label="文章操作">
        <button class="post-action post-top" type="button" data-action="top" aria-label="返回顶部" title="返回顶部">
            <i class="fa-solid fa-arrow-up" aria-hidden="true"></i>
        </button>
        <button class="post-action post-back" type="button" data-action="back" aria-label="返回上页" title="返回上页">
            <i class="fa-solid fa-arrow-left" aria-hidden="true"></i>
        </button>
    </div>
</article>
